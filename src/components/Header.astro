---
const menu = [
	[
		{
			label: "srtfk",
			url: "/",
		},
		{
			label: "work",
			url: "/work",
		},
	],
	[
		{
			label: "whatsapp",
			url: "/whatsapp",
		},
		{
			label: "linkedin",
			url: "/linkedin",
		},
		{
			label: "upwork",
			url: "/upwork",
		},
	],
]
---

<aside
	class="static py-10 lg:px-0 md:px-6 px-12 xl:max-w-screen-lg max-w-screen-md w-full"
>
	<div class="flex sm:gap-16 gap-4">
		{
			menu.map((group) => (
				<div class="flex gap-4">
					{group.map((menu) => (
						<a
							href={menu.url}
							class="hover:text-accent transition-all hover:-translate-y-1 "
						>
							<p>{menu.label}</p>
						</a>
					))}
				</div>
			))
		}
		<div class="flex ml-auto mr-4">
			<a
				href="/email"
				class="text-accent hover:text-black transition-all hover:-translate-y-1"
			>
				<p>email</p>
			</a>
		</div>
	</div>
</aside>
