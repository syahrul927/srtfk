---
import Link from "../components/Link.astro"
const menu = [
	[
		{
			label: "srtfk",
			url: "/",
		},
		{
			label: "work",
			url: "/work",
		},
		{
			label: "about",
			url: "/about",
		},
	],
	[
		{
			label: "whatsapp",
			url: "https://api.whatsapp.com/send?phone=62895333302590",
		},
		{
			label: "linkedin",
			url: "https://linkedin.com/in/srtfk",
		},
		{
			label: "upwork",
			url: "/upwork",
		},
	],
]
---

<div
	class="sticky top-0 bg-white z-10 flex justify-center w-full border-b shadow-xs"
>
	<aside
		class="sm:py-10 py-5 lg:px-0 md:px-6 px-12 xl:max-w-screen-lg max-w-screen-md w-full"
	>
		<!-- Mobile Header -->
		<div class="sm:hidden flex justify-between">
			<a>
				<p class="display-1 text-xl">srtfk</p>
			</a>
			<button class="focus:bg-slate-300 p-1 rounded-sm">
				<svg
					width="30"
					height="30"
					viewBox="0 0 15 15"
					fill="none"
					xmlns="http://www.w3.org/2000/svg"
					><path
						d="M1.5 3C1.22386 3 1 3.22386 1 3.5C1 3.77614 1.22386 4 1.5 4H13.5C13.7761 4 14 3.77614 14 3.5C14 3.22386 13.7761 3 13.5 3H1.5ZM1 7.5C1 7.22386 1.22386 7 1.5 7H13.5C13.7761 7 14 7.22386 14 7.5C14 7.77614 13.7761 8 13.5 8H1.5C1.22386 8 1 7.77614 1 7.5ZM1 11.5C1 11.2239 1.22386 11 1.5 11H13.5C13.7761 11 14 11.2239 14 11.5C14 11.7761 13.7761 12 13.5 12H1.5C1.22386 12 1 11.7761 1 11.5Z"
						fill="currentColor"
						fill-rule="evenodd"
						clip-rule="evenodd"></path></svg
				>
			</button>
		</div>
		<!-- Desktop Header -->
		<nav class="sm:flex sm:gap-16 gap-4 hidden">
			{
				menu.map((group) => (
					<div class="flex gap-4 last:ml-auto last:mr-4 group">
						{group.map((menu) => (
							<Link url={menu.url}>{menu.label}</Link>
						))}
					</div>
				))
			}
		</nav>
	</aside>
</div>
